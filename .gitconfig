[user]
	name = Thomas Svensen
	email = thomas.svensen@bekk.no
[core]
	autocrlf = true
[alias]
	a = add --all
	b = branch
	co = checkout
	cob = checkout -b
	cot = checkout --track
	d = diff
	p = pull
	pso = push --set-upstream origin
	ll = log --oneline --decorate
        l = log --pretty=format:'%C(yellow)%h %Cred%ad %Cgreen%an%Cgreen%d %Creset%s' --date=short
        lm = log --pretty=format:'%C(yellow)%h %Cred%ad %Cgreen%an%Cgreen%d %Creset%s' --date=short --max-count=5
        cam = commit -am
        su = submodule update
        s = status
[color "status"]
	untracked = bold yellow
	changed = bold yellow
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[push]
	default = simple
[rebase]
	autoStash = true
[pull]
	rebase = true
